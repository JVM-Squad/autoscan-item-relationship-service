{
  "metadata": {
    "name": "irs-dev"
  },
  "spec": {
    "destination": {
      "namespace": "product-traceability-irs",
      "server": "https://kubernetes.default.svc"
    },
    "project": "project-traceability-irs",
    "source": {
      "plugin": {
        "name": "argocd-vault-plugin-helm-args",
        "env": [
          {
            "name": "AVP_SECRET",
            "value": "vault-secret"
          },
          {
            "name": "helm_args",
            "value": "-f values.yaml --set irs-helm.image.tag=latest"
          }
        ]
      },
      "path": "charts/irs-environments/dev",
      "repoURL": "https://github.com/catenax-ng/tx-item-relationship-service",
      "targetRevision": "catena-x-environments"
    },
    "syncPolicy": {
      "automated": {
        "allowEmpty": true,
        "prune": true,
        "selfHeal": true
      }
    }
  }
}